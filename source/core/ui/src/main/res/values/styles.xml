<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Support-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/main_red</item>
        <item name="colorPrimaryDark">@color/main_red_dark</item>

    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">

        <item name="android:background">@color/main_red</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>

        <item name="android:windowContentOverlay">@null</item>

        <!-- Support library compatibility -->
        <item name="background">@color/main_red</item>
        <item name="elevation" tools:targetApi="lollipop">0dp</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorLink">@color/main_red</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorLink">@color/main_red</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonWithoutBG">
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/simple_highlight_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_dark_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
    </style>

</resources>